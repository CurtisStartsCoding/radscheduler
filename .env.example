# RadScheduler Phase 5.2 Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# DATABASE (REQUIRED)
# =============================================================================
# PostgreSQL connection string
# Uses existing radorder_main database from RadOrderPad
DATABASE_URL=postgresql://user:password@localhost:5432/radorder_main

# =============================================================================
# TWILIO SMS (REQUIRED)
# =============================================================================
# Twilio account credentials - get from https://console.twilio.com
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_PHONE_NUMBER=+1234567890

# Public URL for Twilio webhook (production only)
# TWILIO_WEBHOOK_URL=https://radscheduler.yourdomain.com/api/sms/webhook

# =============================================================================
# QIE INTEGRATION (REQUIRED)
# =============================================================================
# QIE REST API base URL (internal network)
QIE_API_URL=http://10.0.1.211:8082/api/ris

# QIE API authentication key (if required)
QIE_API_KEY=your_qie_api_key

# QIE request timeout in milliseconds
QIE_TIMEOUT_MS=5000

# =============================================================================
# SMS CONFIGURATION
# =============================================================================
# Require consent before sending SMS (HIPAA compliance)
SMS_CONSENT_REQUIRED=true

# Session timeout in hours (HIPAA requires expiry)
SMS_SESSION_TTL_HOURS=24

# Maximum retry attempts for failed operations
SMS_MAX_RETRY_ATTEMPTS=3

# Audit log retention in days (HIPAA requires 7 years = 2555 days)
SMS_AUDIT_RETENTION_DAYS=2555

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
# Application port
PORT=3010

# Node environment (development, production)
NODE_ENV=development

# Frontend URL (if using CORS)
# FRONTEND_URL=http://localhost:3000

# =============================================================================
# AUTHENTICATION (OPTIONAL - if using auth system)
# =============================================================================
# JWT secret for token signing
# JWT_SECRET=your-very-secure-random-secret-key-min-32-chars

# JWT token expiry (default: 24h)
# JWT_EXPIRY=24h

# Bcrypt rounds for password hashing (default: 10)
# BCRYPT_ROUNDS=10

# =============================================================================
# DEPRECATED / NOT USED IN PHASE 5.2
# =============================================================================
# The following variables are NOT used in Phase 5.2:
# - REDIS_URL (removed - PostgreSQL only)
# - ANTHROPIC_API_KEY (removed - no AI integration)
# - AVREO_API_URL (removed - QIE handles RIS integration)
# - AVREO_USERNAME (removed)
# - AVREO_API_KEY (removed)
# - DEMO_PHONE (removed - no demo system)
# - DEMO_MODE (removed)