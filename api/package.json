{
  "name": "radscheduler-api",
  "version": "1.0.0",
  "description": "RadScheduler API Server",
  "main": "src/server.js",
  "scripts": {
    "dev": "set PORT=3010 && nodemon src/server.js",
    "start": "set PORT=3010 && node src/server.js",
    "seed:demo": "node scripts/seed-demo.js",
    "db:reset": "node scripts/reset-db.js",
    "test:load": "node scripts/load-test.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.39.0",
    "axios": "^1.10.0",
    "bcryptjs": "^3.0.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.3",
    "twilio": "^4.19.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "nodemon": "^3.0.1"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/__tests__/**"
    ],
    "coverageDirectory": "coverage",
    "verbose": true
  }
}
